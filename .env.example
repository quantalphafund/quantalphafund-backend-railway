# QuantAlpha Fund - Environment Variables
# Copy this file to .env and fill in your API keys

# =============================================================================
# DATA PROVIDERS (Required for 100+ Factor Engine)
# =============================================================================

# Intrinio API - Historical prices, fundamentals, analyst data
# Sign up at: https://intrinio.com/
# Pricing: ~$75-150/month for full access
INTRINIO_API_KEY=your_intrinio_api_key_here

# Quandl/Nasdaq Data Link - Macro data, economic indicators, alternative data
# Sign up at: https://data.nasdaq.com/
# Pricing: ~$50-100/month for premium datasets
QUANDL_API_KEY=your_quandl_api_key_here
NASDAQ_DATA_LINK_API_KEY=your_nasdaq_data_link_key_here

# =============================================================================
# MARKET DATA (Already configured)
# =============================================================================

# Finnhub - Real-time quotes
FINNHUB_API_KEY=your_finnhub_key

# =============================================================================
# OPTIONAL PROVIDERS
# =============================================================================

# Alpha Vantage - Alternative for fundamentals (free tier available)
# ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key

# News API - News sentiment
# NEWS_API_KEY=your_news_api_key

# =============================================================================
# DEPLOYMENT
# =============================================================================

# Railway deployment
RAILWAY_TOKEN=your_railway_token

# Environment
ENVIRONMENT=production
DEBUG=false
